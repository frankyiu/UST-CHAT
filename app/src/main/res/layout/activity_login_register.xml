<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".LoginRegisterActivity"

    >
    <include
        layout="@layout/layout_toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <TextView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USTChat"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:paddingBottom="80dp"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/edit_login_student_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_hint_login_student_email"
            android:includeFontPadding="true"
            android:paddingLeft="10dp"
            android:layout_below="@+id/login_logo"
            android:maxLines="1"
            />

        <RelativeLayout
            android:id="@+id/edit_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_login_student_email"
            >

            <EditText
                android:id="@+id/edit_login_password_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_hint_login_password"
                android:includeFontPadding="true"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                />

            <TextView
                android:id="@+id/tv_login_forgot_password"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/edit_login_password_"
                android:text="@string/tv_text_login_forgot_password"
                android:textSize="10dp"
                />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/edit_login_password"
            android:text="@string/btn_text_login_login"
            android:textColor="@color/black"
            app:backgroundTint="@color/login_btn_color"
            app:strokeWidth="1dp"
            app:cornerRadius="7dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/btn_text_login_sign_up"
            android:textColor="@color/white"
            app:backgroundTint="@color/sign_up_btn_color"
            android:layout_below="@+id/btn_login_login"
            app:cornerRadius="7dp"
            />

        <TextView
            android:id="@+id/tv_login_continue_as_a_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:layout_below="@+id/btn_login_sign_up"
            android:text="@string/link_continue_as_a_visitor"
            />

    </RelativeLayout>

</LinearLayout>

